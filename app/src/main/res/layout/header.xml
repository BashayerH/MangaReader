<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navHeader"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    android:background="@drawable/background_draw"
    android:padding="16sp"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/navHeaderImg"
        android:layout_width="88dp"
        android:layout_height="73dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
       app:shapeAppearanceOverlay="@style/Circle"
        android:padding="6dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chick"
        app:strokeColor="@color/black" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="135dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:hint="@string/profile_name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/navHeaderImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/emilProfil"
        android:layout_width="116dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:hint="@string/email"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/changePhoto"
        app:layout_constraintTop_toBottomOf="@+id/profileName" />

    <TextView
        android:id="@+id/changePhoto"
        android:layout_width="102dp"
        android:layout_height="27dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="@string/change_photo"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navHeaderImg" />

</androidx.constraintlayout.widget.ConstraintLayout>