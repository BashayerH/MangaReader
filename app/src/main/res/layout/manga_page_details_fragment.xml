<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60sp"
        android:paddingTop="60sp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="83dp"
            android:layout_height="29dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:text="last chapter: "
            android:textColor="#101010"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageView_detil"
            app:layout_constraintTop_toBottomOf="@+id/name_txt_view" />

        <ImageView
            android:id="@+id/imageView_detil"
            android:layout_width="176dp"
            android:layout_height="178dp"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/descr_txt"
            android:layout_width="158dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:text=" Description"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/desc_txt_view"
            app:layout_constraintStart_toStartOf="@+id/desc_txt_view"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/name_txt_view"
            android:layout_width="219dp"
            android:layout_height="74dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:hint="manga name"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/last_ch_txt_view2"
            android:layout_width="136dp"
            android:layout_height="33dp"
            android:layout_marginBottom="84dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:hint="last ch"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintStart_toEndOf="@+id/textView7" />

        <TextView
            android:id="@+id/desc_txt_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="183dp"
            android:ems="10"
            android:fontFamily="@font/advent_pro_semibold"
            android:gravity="start|top"
            android:hint="the story"
            android:inputType="textMultiLine"
            android:textColor="#673AB7"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descr_txt" />

        <View
            android:id="@+id/divider"
            android:layout_width="404dp"
            android:layout_height="5dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="224dp"
            android:layout_marginEnd="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider2"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc_txt_view" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="44dp"
            android:text="read"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <Button
            android:id="@+id/fav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="44dp"
            android:text="@string/favorite"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>