<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55sp"
        android:paddingTop="55sp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:text="last chapter: "
            android:textColor="#673AB7"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/last_ch_txt_view2"
            app:layout_constraintEnd_toStartOf="@+id/last_ch_txt_view2"
            app:layout_constraintStart_toStartOf="@+id/textView6" />

        <ImageView
            android:id="@+id/imageView_detil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toStartOf="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/descr_txt"
            android:layout_width="158dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:text=" Description"
            app:layout_constraintBottom_toTopOf="@+id/desc_txt_view"
            app:layout_constraintStart_toStartOf="@+id/desc_txt_view"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:text="Name:"
            android:textColor="#673AB7"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/name_txt_view"
            app:layout_constraintEnd_toStartOf="@+id/last_ch_txt_view2"
            app:layout_constraintStart_toEndOf="@+id/imageView_detil" />

        <TextView
            android:id="@+id/name_txt_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:hint="manga name"
            android:textColor="#3F51B5"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/last_ch_txt_view2"
            app:layout_constraintEnd_toEndOf="@+id/last_ch_txt_view2"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/last_ch_txt_view2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="46dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:hint="manga name"
            android:textColor="#3F51B5"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/name_txt_view" />

        <EditText
            android:id="@+id/desc_txt_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="183dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="the story"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descr_txt" />

        <View
            android:id="@+id/divider"
            android:layout_width="404dp"
            android:layout_height="5dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/last_ch_txt_view2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>