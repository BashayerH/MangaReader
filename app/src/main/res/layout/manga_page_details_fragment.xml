<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:layoutDirection="inherit">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="100dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="180dp"
                    android:layout_marginTop="140dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageD"
                    app:srcCompat="@drawable/rating" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageD"
                    android:layout_width="155dp"
                    android:layout_height="158dp"

                    android:layout_marginStart="9dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="220dp"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.388"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mangaName"
                    app:shapeAppearanceOverlay="@style/roundF"
                    app:srcCompat="@drawable/bye"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/mangaName"
                    android:layout_width="313dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/manga_name"
                    android:textAlignment="center"
                    android:textColor="@color/blue_alice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/favB"
                    android:layout_width="46dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="160dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mangaName"
                    app:srcCompat="@drawable/heart56" />

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="47dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="112dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/favB"
                    app:srcCompat="@drawable/speech_bubble" />

                <ImageView
                    android:id="@+id/decB"
                    android:layout_width="47dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="64dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/comment"
                    app:srcCompat="@drawable/open_book" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="68dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/rating"
                    android:textAlignment="center"
                    android:textColor="@color/chaines_red"
                    app:layout_constraintStart_toEndOf="@+id/imageView11"
                    app:layout_constraintTop_toBottomOf="@+id/decB" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="268dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="1dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView11" />

                <View
                    android:id="@+id/divider5"
                    android:layout_width="268dp"
                    android:layout_height="3dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="1dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/genresView" />

                <TextView
                    android:id="@+id/status3"
                    android:layout_width="78dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="27dp"
                    android:layout_marginEnd="19dp"
                    android:text="@string/status"
                    app:layout_constraintEnd_toStartOf="@+id/statusView2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider2" />

                <TextView
                    android:id="@+id/statusView2"
                    android:layout_width="232dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="36dp"
                    android:text="@string/unavailable"
                    android:textAlignment="center"
                    android:textColor="@color/chaines_red"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/status3"
                    app:layout_constraintTop_toBottomOf="@+id/divider2" />

                <TextView
                    android:id="@+id/lastUp"
                    android:layout_width="87dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/last_update"
                    app:layout_constraintEnd_toStartOf="@+id/last_upV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/status3" />

                <TextView
                    android:id="@+id/last_upV"
                    android:layout_width="241dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:text="@string/unavailable"
                    android:textAlignment="center"
                    android:textColor="@color/chaines_red"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/lastUp"
                    app:layout_constraintTop_toBottomOf="@+id/statusView2" />

                <TextView
                    android:id="@+id/genres"
                    android:layout_width="78dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/genres"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lastUp" />

                <TextView
                    android:id="@+id/genresView"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="24dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:text="@string/unavailable"
                    android:textAlignment="center"
                    android:textColor="@color/chaines_red"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/genres"
                    app:layout_constraintTop_toBottomOf="@+id/last_upV" />

                <Button
                    android:id="@+id/last_ch"
                    android:layout_width="182dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/last_chapter"
                    android:textColor="@color/grayGreen"
                    android:textSize="13dp"
                    app:layout_constraintEnd_toStartOf="@+id/chapter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/genresView" />

                <Button
                    android:id="@+id/chapter"
                    android:layout_width="161dp"
                    android:layout_height="55dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="36dp"
                    android:text="@string/chapters"
                    android:textColor="@color/grayGreen"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/last_ch"
                    app:layout_constraintTop_toBottomOf="@+id/genresView" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
