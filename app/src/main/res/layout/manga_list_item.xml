<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:layout_marginTop="55sp"
        android:paddingTop="55sp">



        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="251dp"
            android:layout_height="105dp"
            android:layout_marginTop="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            android:id="@+id/looding"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lott_loading" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/mangaImg"
            android:layout_width="338dp"
            android:layout_height="468dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="194dp"
            android:scaleType="centerCrop"
            android:transitionName="sec_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.46"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.395"
            app:shapeAppearanceOverlay="@style/Raound"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/mangaTitle"
            android:layout_width="345dp"
            android:layout_height="66dp"
            android:background="@drawable/filed_manga_name"
            android:backgroundTint="#D24C4B50"
            android:fontFamily="@font/arima_madurai_thin"
            android:hint="@string/manga_title"
            android:padding="5sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/mangaImg"
            app:layout_constraintEnd_toEndOf="@+id/mangaImg"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/mangaImg"
            app:layout_constraintTop_toTopOf="@+id/mangaImg"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>