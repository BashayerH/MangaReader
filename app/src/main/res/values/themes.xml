<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MangaReader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/overWite</item>
        <item name="colorPrimaryVariant">@color/darkGreen</item>
        <item name="colorOnPrimary">@color/isablin</item>
        <item name="android:textColor">@color/isablin</item>
        <item name="android:textColorPrimary">@color/isablin</item>
        <item name="itemTextColor">@color/isablin</item>
        <item name="android:textColorAlertDialogListItem">@color/darkGreen</item>
        <item name="textOutlineColor">@color/isablin</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mornGreen</item>
        <item name="colorSecondaryVariant">@color/blue_cry</item>
        <item name="colorOnSecondary">@color/cadiGreen</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MangaReader.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>