<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MangaReader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bink_patten</item>
        <item name="colorPrimaryVariant">@color/eggPlant</item>
        <item name="colorOnPrimary">@color/peggy_pink</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo</item>
        <item name="colorSecondaryVariant">@color/blue_cry</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MangaReader.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MangaReader.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MangaReader.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>